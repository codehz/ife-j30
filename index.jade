doctype html
head
  meta(charset="utf-8")
  title 多个表单项的动态校验
  script(src="index.js", charset="utf-8")
  link(rel="stylesheet", href="index.css")
body
  .box
    label(for="name") 名称
    input#name(type="text", name="name")
  .box
    label(for="password") 密码
    input#password(type="password", name="password")
  .box
    label(for="password-re") 密码确认
    input#password-re(type="password", name="password-re")
  .box
    label(for="email") 邮箱
    input#email(type="email", name="email")
  .box
    label(for="phone") 手机
    input#phone(type="phone", name="phone")
  input(type="button", name="submit", value="提交", onclick="submit")
  